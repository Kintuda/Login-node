extends layout
block content

  .container
    h1 Registro
    h1  #{teste}
    if teste =='Cadastro completo'
      .alert.alert-success(role='alert')
        strong Parab√©ns
        |  Cadastro completo

    if errors
        each i in errors
          .alert.alert-danger(role='alert')
            strong Erro
            |  Erro de cadastro + errors
    .col-md-3
      Registro
      form(role='form',method='POST',action='/users/register')
        .form-group
          label(for='name',name='log') Nome
          input.form-control(name = 'name', type='name', placeholder='Digite seu nome')
        .form-group
          label(for='exampleInputEmail1',name='log') Username
          input#exampleInputEmail1.form-control(name='usr', type='text', placeholder='Digite seu Username')
        .form-group
          label(for='exampleInputEmail1',name='log') Email
          input#exampleInputEmail1.form-control(name='email',type='text', placeholder='Digite seu email')
        .form-group
          label(for='exampleInputEmail1',name='log') senha
          input#exampleInputEmail1.form-control(name='senha',type='password', placeholder='Digite sua senha')
        .form-group
          label(for='exampleInputEmail1',name='log') senha
          input#exampleInputEmail1.form-control(name='senha2',type='password', placeholder='Confirme sua senha')
        .form-group
          label(for='exampleInputEmail1',name='log') Fone
          input#exampleInputEmail1.form-control(name='telefone',type='text', placeholder='Digite seu telefone')

        button.btn.btn-default(type='submit') Submit
